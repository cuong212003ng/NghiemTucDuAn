extends ../../layout/default.pug

include ../../mixins/showalert.pug

block main

    h1(class="mb-4") Chi tiết sản phẩm: #{product.title}

    .card.product-detail-card
        .card-body
            form(
                action=`${prefixAdmin}/products/detail/${product._id}`
                method="GET"
                id="form-detail-product"
                data-id=product._id
                enctype="multipart/form-data"
                class="product-detail-form"
            )
                .product-detail-grid
                    //- Cột trái: Thông tin chính
                    .product-detail-main
                        div(class="form-group mb-3")
                            label(for="title") Tên sản phẩm
                            input(
                                type="text" 
                                name="title" 
                                id="title" 
                                class="form-control"
                                value=product.title
                                readonly
                            )
                        div(class="form-group mb-3")
                            label(for="desc") Mô tả
                            textarea(
                                rows="5"
                                name="description" 
                                id="desc" 
                                class="form-control"
                                readonly
                            ) #{product.description}

                        .product-detail-price-row
                            div(class="form-group mb-3")
                                label(for="price") Giá
                                input(
                                    type="number" 
                                    name="price" 
                                    id="price" 
                                    class="form-control"
                                    value=product.price
                                    min="0"
                                    step="0.01"
                                    required
                                    readonly
                                )
                            div(class="form-group mb-3")
                                label(for="discount") % Giảm giá
                                input(
                                    type="number" 
                                    name="discountPercentage" 
                                    id="discount" 
                                    class="form-control"
                                    value=product.discountPercentage
                                    min="0"
                                    step="0.01"
                                    readonly
                                )
                            div(class="form-group mb-3")
                                label(for="stock") Số lượng
                                input(
                                    type="number" 
                                    name="stock" 
                                    id="stock" 
                                    class="form-control"
                                    value=product.stock
                                    min="0"
                                    readonly
                                )

                    //- Cột phải: Ảnh, vị trí, trạng thái
                    .product-detail-side
                        div(
                            class="form-group mb-3"
                            upload-image
                        )
                            label(for="thumbnail" style="margin-top: 15px; margin-right: 1px;") Hình ảnh
                            input(
                                type="file" 
                                name="thumbnail" 
                                id="thumbnail" 
                                class="form-control-file"
                                accept="image/*"
                                upload-image-input
                                disabled
                            )
                            button(
                                type="button"
                                class="btn btn-danger"
                                delete-image="true"
                                disabled
                            ) Xóa hình ảnh
                            img(
                                src=product.thumbnail
                                upload-image-preview
                                class="img-preview"
                            )
                        div(class="form-group mb-3")
                            label(for="position") Vị trí
                            input(
                                type="number" 
                                name="position" 
                                id="position" 
                                class="form-control"
                                placeholder="Tự động tăng"
                                min="1"
                                value=product.position
                                readonly
                            )

                        .product-detail-status
                            div(class="form-group form-check form-check-inline")
                                input(
                                    type="radio"
                                    class="form-check-input"
                                    id="statusActive"
                                    name="status"
                                    value="active"
                                    checked=product.status == 'active'
                                    disabled
                                )
                                label(for="statusActive" class="form-check-label") Hoạt động
                            div(class="form-group form-check form-check-inline")
                                input(
                                    type="radio"
                                    class="form-check-input"
                                    id="statusInactive"
                                    name="status"
                                    value="inactive"
                                    checked=product.status == 'inactive'
                                    disabled
                                )
                                label(for="statusInactive" class="form-check-label") Dừng hoạt động

                        div(class="form-group mt-3 text-end")
                            a(
                                href=`${prefixAdmin}/products`
                                class="btn btn-secondary"
                            ) Quay lại danh sách sản phẩm


    script(src="/admin/js/productScripts.js")   